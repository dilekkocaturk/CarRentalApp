@model carRentalApp.Models.User
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">User Login</h2>

<form id="loginForm" asp-action="Index" method="post" class="row g-3">
    <div class="col-md-6 mx-auto">
        <label for="UserName" class="form-label">User Name</label>
        <input asp-for="UserName" class="form-control" id="UserName" placeholder="Enter your username" required />
    </div>
    <div class="col-md-6 mx-auto">
        <label for="PasswordHash" class="form-label">Password</label>
        <input type="password" asp-for="PasswordHash" class="form-control" id="PasswordHash" placeholder="Enter your password" required />
    </div>
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>

<p class="mt-3 text-center">
    Don't have an account? <a asp-action="SignUp">Sign Up</a>
</p>

@if (TempData["LoginError"] != null)
{
    <p class="text-danger text-center">@TempData["LoginError"]</p>
}

@if (TempData["Message"] != null)
{
    <p class="text-success text-center">@TempData["Message"]</p>
}